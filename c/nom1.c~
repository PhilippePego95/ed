	printf ("tienes retraso?");
	scanf ("%s",duda);
	printf ("vale,%s tiene retraso\n",duda);
	char duda1 [10];
	printf ("tienes amigos?"); 
	scanf ("%s",duda1);
	printf ("%s, no digas mentiras, no tienes..\n",nom);
	}
